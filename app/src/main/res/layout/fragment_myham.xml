<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyhamActivity">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="?android:attr/actionBarSize"></LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/myham_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="@dimen/myham_width"
            android:layout_height="0dp"
            android:layout_weight="0.59"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.65"
                android:gravity="center"
                android:id="@+id/first_layout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:paddingTop="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:id="@+id/ham_card"
                    android:layout_gravity="center"
                    android:src="@drawable/card2"
                    android:layout_weight="0.55" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.45"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HAM Basic Card"
                        android:textSize="24dp"
                        android:textColor="@color/icons"
                        android:id="@+id/card_name"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유효기한: ~16.02.02"
                        android:textSize="16dp"
                        android:textColor="@color/icons"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:id="@+id/second_layout">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="350dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.15"-->
            <!--android:gravity="center"-->
            <!--android:padding="10dp"-->
            <!--android:id="@+id/third_layout">-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="바코드"-->
            <!--android:textSize="20dp"-->
            <!--android:textColor="@color/icons"-->
            <!--android:id="@+id/textView12" />-->
            <!--</LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/show_card"
                android:src="@drawable/card1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/myham_width"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="서비스내역"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/button"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="이용 내역"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/button2"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="구매 목록"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/button3"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="카드 등록"
                    android:textSize="@dimen/text_size"
                    android:id="@+id/button4"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:background="@color/primary"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>