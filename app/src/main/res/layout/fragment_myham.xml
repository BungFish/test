<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    tools:context=".activities.MyhamActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/grey_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/myham_card" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="나의보유카드"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/defualt_margin"
            android:layout_marginLeft="@dimen/defualt_margin"
            android:layout_marginRight="@dimen/defualt_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/hamcard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/membership_card_basic"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/hamcard_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAM SM Card"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/hamcard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/membership_card_basic"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/hamcard_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAM SM Card"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/hamcard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/membership_card_basic"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/hamcard_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAM SM Card"
                    android:textSize="@dimen/text_size_small"/>
            </LinearLayout>



            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/myham_list"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:clipToPadding="false" />-->



        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/defualt_margin"
            android:layout_marginRight="@dimen/defualt_margin"
            android:layout_weight="0.47"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:background="@color/primary"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="HAM Basic Card"
                    android:textColor="@color/icons"
                    android:textSize="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="유효기한: ~16.02.02"
                    android:textColor="@color/icons"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:scrollbarSize="4dp"/>

            </LinearLayout>

            <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="350dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.15"-->
            <!--android:gravity="center"-->
            <!--android:padding="10dp"-->
            <!--android:id="@+id/third_layout">-->

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="바코드"-->
            <!--android:textSize="20dp"-->
            <!--android:textColor="@color/icons"-->
            <!--android:id="@+id/textView12" />-->
            <!--</LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/defualt_margin"
            android:layout_weight="0.33"
            android:background="@drawable/border_background"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/myham_car"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:id="@+id/button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            android:text="서비스내역"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/abc_text_size_menu_material" />
                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_opacity_soft" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/myham_inventory" />

                        <TextView
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            android:text="이용내역"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/abc_text_size_menu_material" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_opacity_soft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/myham_coin" />

                        <TextView
                            android:id="@+id/button3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            android:text="구매/연장목록"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/abc_text_size_menu_material" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey_opacity_soft" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/myham_card" />

                        <TextView
                            android:id="@+id/button4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/transparent"
                            android:text="카드등록"
                            android:textColor="@color/secondary_text"
                            android:textSize="@dimen/abc_text_size_menu_material" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:orientation="vertical"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="48dp">-->
        <!--</LinearLayout>-->
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>